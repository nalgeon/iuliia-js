{
    "name": "iuliia",
    "version": "0.8.1",
    "description": "Transliterate Cyrillic â†’ Latin in every possible way",
    "author": "Anton Zhiyanov <m@antonz.ru>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nalgeon/iuliia-js.git"
    },
    "keywords": [
        "transliterate",
        "transliteration",
        "romanization",
        "cyrillic to latin",
        "iso 9",
        "icao doc 9303"
    ],
    "devDependencies": {
        "@babel/core": "^7.16.7",
        "@babel/preset-env": "^7.16.8",
        "@babel/preset-typescript": "^7.16.7",
        "@rollup/plugin-typescript": "^8.3.0",
        "@types/jest": "^27.4.0",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "ajv": "^8.9.0",
        "coveralls": "^3.0.14",
        "eslint": "^8.7.0",
        "execa": "^5.1.1",
        "jest": "^27.4.7",
        "json-schema-to-typescript": "^10.1.5",
        "prettier": "^2.0.5",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4",
        "webpack": "^5.67.0",
        "webpack-cli": "^4.9.1"
    },
    "main": "dist/node/index.js",
    "types": "dist/node/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "generate": "ts-node --skip-project ./scripts/generate.ts",
        "postgenerate": "npm run format",
        "clean": "rm -rf dist",
        "compile:node": "tsc",
        "compile:browser": "tsc -p tsconfig.browser.json",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint .",
        "test": "jest",
        "build": "npm run clean && npm run compile:node && npm run compile:browser && npm run bundle:umd && npm run bundle:umd:min && npm run build:stats",
        "build:stats": "cd dist/umd && ls -lh *.js | awk '{print $5,$9}'",
        "bundle:umd": "webpack --no-optimization-minimize --output-filename=umd/iuliia.js && rm -rf .tmp",
        "bundle:umd:min": "webpack --optimization-minimize --output-filename=umd/iuliia.min.js && rm -rf .tmp"
    }
}
