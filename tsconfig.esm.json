{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2020",
            "dom"
        ],
        "sourceMap": true,
        "downlevelIteration": true,
        "declaration": true,
        "strict": true,
        "outDir": "./dist/esm",
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}